<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/imgtIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/icons8_money48"
        android:layout_marginEnd="12dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiền Lương"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ghi chú hôm nay"
            android:textSize="14sp"
            android:textColor="#777777" />
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/04/2025"
            android:textStyle="bold"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+50,000đ"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark" />

    <!-- Thêm ImageView cho ic_expense nếu muốn hiển thị icon cho chi tiêu -->
    <ImageView
        android:id="@+id/ic_expense"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/icons8_hamburger48"
        android:visibility="gone" />
</LinearLayout>

